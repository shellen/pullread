{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Pull Read",
  "version": "0.3.1",
  "identifier": "com.pullread.desktop",
  "build": {
    "beforeBuildCommand": "bun run scripts/bundle-kokoro.ts && bun run scripts/embed-viewer.ts && bash scripts/download-kokoro-model.sh && mkdir -p src-tauri/resources/kokoro-model && cp -R dist/kokoro-model/* src-tauri/resources/kokoro-model/",
    "beforeDevCommand": "",
    "frontendDist": "../viewer-dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all",
    "externalBin": [
      "binaries/pullread-cli"
    ],
    "resources": [
      "resources/kokoro.web.js",
      "resources/ort-wasm",
      "resources/kokoro-model"
    ],
    "macOS": {
      "minimumSystemVersion": "13.0"
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": [
          "pullread"
        ]
      }
    },
    "updater": {
      "endpoints": [
        "https://github.com/shellen/pullread/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDZBNDM3MTJBMEE5OUQwNEEKUldSSzBKa0tLbkZEYW5UUFRoc1gwSnlVMk5JaUIrMHBYL0pRblBkR1lLaWd3bkRxRFJjNjlDMk8K"
    }
  }
}
